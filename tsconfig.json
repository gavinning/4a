{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2015", "ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    // "declaration": true, // 自动生成声明文件
    // "declarationDir": "dist", // 声明文件生成的目录
    // "emitDeclarationOnly": true, // 只输出声明文件(ts 产物)

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // 允许导入 .ts 文件
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // 禁止未使用的局部变量
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".", // 基础目录
    "paths": {
      "@a/*": ["./*"]
    }
  },
  // "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
